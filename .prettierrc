{
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "tabWidth": 4,
    "trailingComma": "es5",
    "overrides": [
        {
            "files": ["*.js", "*.ts", "*.vue"],
            "options": {
                "singleQuote": true
            }
        },
        {
            "files": ["*.pug", "*.vue"],
            "options": {
                "pugAttributeSeparator": "none",
                "pugIdNotation": "as-is",
                "pugSortAttributes": "asc"
            }
        }
    ]
}
